class Solution {
public:
    vector<int> findBuildings(vector<int>& heights) {
        int n = heights.size();
        vector<int> nge(n, -1);
        stack<int> s;
        for(int i=n-1;i>=0;i--){
            while(!s.empty() && heights[s.top()] < heights[i]){
                s.pop();
            }
            if(!s.empty()) nge[i] = s.top();
            s.push(i);
        }

        vector<int> ans;
        for(int i=0;i<n;i++){
            if(nge[i] == -1)
                ans.push_back(i);
        }
        return ans;
    }
};
