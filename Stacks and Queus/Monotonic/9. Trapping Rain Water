class Solution {
public:
    int trap(vector<int>& height) {
        int n = height.size();
        int cnt = 0;
        stack<int> s;
        for(int i=0;i<n;i++){
            while(!s.empty() && height[s.top()] < height[i]){
                int top = s.top();
                s.pop();
                if(!s.empty()){
                    int h = min(height[s.top()], height[i]) - height[top];
                    int w = i - s.top() - 1;
                    cnt += w * h;
                }
            }
            s.push(i);
        }
        return cnt;
    }
};
