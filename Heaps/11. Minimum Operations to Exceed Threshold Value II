class Solution {
public:
    int minOperations(vector<int>& nums, int k) {
        int cnt = 0;
        priority_queue<long long,vector<long long>,greater<long long>> pq;
        for(auto it:nums) pq.push(it);
        while(pq.size() >= 2){
            long long x = pq.top();
            pq.pop();
            long long y = pq.top();
            pq.pop();
            if(x >= k) break;
            pq.push(x * 2 + y);
            cnt++;
        }
        return cnt;
    }
};
