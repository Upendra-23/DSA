class Solution {
public:
    int maximumScore(int a, int b, int c) {
        priority_queue<int> pq;
        pq.push(a);
        pq.push(b);
        pq.push(c);

        int score = 0;
        while(pq.size() >= 2){
            score++;
            int a = pq.top();
            pq.pop();
            int b = pq.top();
            pq.pop();
            a--;
            b--;
            if(a) pq.push(a);
            if(b) pq.push(b);
        }
        return score;
    }
};
