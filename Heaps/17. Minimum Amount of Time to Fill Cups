class Solution {
public:
    int fillCups(vector<int>& amount) {
        priority_queue<int> pq;
        for(auto it:amount){
            if(it > 0)
                pq.push(it);
        }

        int sec = 0;
        while(!pq.empty()){
            sec++;
            int a = pq.top();
            pq.pop();
            a--;
            if(!pq.empty()){
                int b = pq.top();
                pq.pop();
                b--;
                if(b > 0) pq.push(b);
            }
            if(a > 0) pq.push(a);
        }
        return sec;
    }
};
