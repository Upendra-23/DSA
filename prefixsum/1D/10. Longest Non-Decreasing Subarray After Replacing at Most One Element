class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int n = nums.size();

        if(n == 1) return 1;
        vector<int> left(n, 1), right(n, 1);

        for(int i=1;i<n;i++) {
            if(nums[i] >= nums[i-1])
                left[i] = left[i-1] + 1;
        }

        for(int i=n-2;i>=0;i--) {
            if(nums[i+1] >= nums[i]) 
                right[i] = right[i+1] + 1;
        }

        int ans = *max_element(left.begin(), left.end());

        ans = max(ans, right[1]+1);
        ans = max(ans, left[n-2]+1);

        for(int i=1;i<n-1;i++) {
            if(nums[i-1] <= nums[i+1])
                ans = max(ans, left[i-1] + 1 + right[i+1]);
            else 
                ans = max(ans, 1+max(left[i-1], right[i+1]));
        }
        return ans;
    }
};
