class Solution {
public:
    int n, m;
    int dp[1000][1000];
    int fun(int i, int j, string &s1, string &s2) {
        if(i == n && j == m) return 0;
        if(i == n && j >= 0) {
            int sum = 0;
            while(j < m) {
                sum += s2[j];
                j++;
            }
            return sum;
        }
        if(j == m && i >= 0) {
            int sum = 0;
            while(i < n) {
                sum += s1[i];
                i++;
            }
            return sum;
        }
        if(dp[i][j] != -1) return dp[i][j];
        if(s1[i] == s2[j]) return  dp[i][j] = fun(i+1, j+1, s1, s2);
        return dp[i][j] = min(s1[i] + fun(i+1, j, s1, s2), s2[j] + fun(i, j+1, s1, s2));
    }
    int minimumDeleteSum(string s1, string s2) {
        n = s1.size();
        m = s2.size();
        memset(dp, -1, sizeof(dp));
        return fun(0, 0, s1, s2);
    }
};
