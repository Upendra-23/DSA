class Solution {
public:
    int largestPrime(int n) {
        vector<int> isprime(n+1,1);
        isprime[0] = isprime[1] = false;
        for(int i=2;i*i<=n;i++){
            if(isprime[i]){
                for(int j=i*i;j<=n;j+=i)
                    isprime[j] = false;
            }
        }

        vector<int> primes;
        for(int i=0;i<=n;i++) {
            if(isprime[i]) primes.push_back(i);
        }
        
        long long sum = 0, ans = 0;
        for(auto p: primes) {
            sum += p;
            if(sum > n) break;
            if(isprime[sum]) ans = sum;
        }
        return ans;
    }
};
