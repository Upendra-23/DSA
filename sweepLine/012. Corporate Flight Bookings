class Solution {
public:
    vector<int> corpFlightBookings(vector<vector<int>>& bookings, int n) {
        vector<int> seats(n+2, 0);
        for(auto &it: bookings){
            seats[it[0]] += it[2];
            seats[it[1]+1] -= it[2];
        }

        int cumSeats = 0;
        vector<int> ans;
        for(int i=1;i<=n;i++){
            cumSeats += seats[i];
            ans.push_back(cumSeats);
        }
        return ans;
    }
};
