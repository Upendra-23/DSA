class Solution {
    int getPower(int n){
        long long p = 1;
        for(int i=1;i<=n;i++) {
            p = (p * 2)%mod;
        }
        return p;
    }
public:
    int mod = (int)(1e9+7);
    int countWays(vector<vector<int>>& ranges) {
        map<int,int> mp;
        for(auto it:ranges) {
            mp[it[0]]++;
            mp[it[1]]--;
        }

        int cnt = 0, ans = 0;
        for(auto &it: mp){
            cnt += it.second;
            if(cnt == 0) ans++;
        }
        return getPower(ans);
    }
};
