class Solution {
public:
    int maximumPopulation(vector<vector<int>>& logs) {
        map<int,int> mp;
        for(auto it:logs){
            mp[it[0]]++;
            mp[it[1]]--;
        }

        int ans = 0;
        int maxpopulation = 0, sum = 0;
        for(auto &it:mp){
            sum += it.second;
            if(sum > maxpopulation){
                maxpopulation = sum;
                ans = it.first;
            }
        }
        return ans;
    }
};

class Solution {
public:
    int numberOfPoints(vector<vector<int>>& nums) {
        int n = 102;
        vector<int> diff(n, 0);

        for(auto it:nums){
            diff[it[0]]++;
            diff[it[1]+1]--;
        }

        int cnt = 0, ans = 0;
        for(int i=0;i<102;i++){
            cnt += diff[i];
            if(cnt > 0)
                ans++;
        }
        return ans;
    }
};
