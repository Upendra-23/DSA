class Solution {
public:
    vector<vector<long long>> splitPainting(vector<vector<int>>& segments) {
        map<long long,long long> mp;
        for(auto it:segments) {
            mp[it[0]] += it[2];
            mp[it[1]] -= it[2];
        }
        
        vector<vector<long long>> ans;
        long long cusum = 0;
        auto it = mp.begin(), prev = mp.begin();
        cusum += it->second;
        cout << cusum << endl;
        it++;
        while(it != mp.end()){
            if(cusum > 0) ans.push_back({prev->first, it->first, cusum});
            cusum += it->second;
            prev = it;
            it++;
        }
        return ans;
    }
};
