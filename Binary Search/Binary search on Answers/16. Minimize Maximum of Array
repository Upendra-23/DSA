class Solution {
    bool isPossible(vector<int> &nums, int maxval) {
        if(nums[0] > maxval) return false;
        long long buffer = maxval - nums[0];
        for(int i=1;i<nums.size();i++) {
            if(nums[i] - buffer > maxval)
                return false;
            buffer = maxval - (nums[i] - buffer);
        }
        return true;
    }
public:
    int minimizeArrayValue(vector<int>& nums) {
        int ans = 0;
        int low = 1, high = *max_element(nums.begin(), nums.end());
        while(low <= high){
            int mid = low+(high-low)/2;
            if(isPossible(nums, mid)){
                ans = mid;
                high = mid-1;
            }
            else low = mid+1;
        }
        return ans;
    }
};
