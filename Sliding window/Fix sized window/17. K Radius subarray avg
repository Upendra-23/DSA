class Solution {
public:
    vector<int> getAverages(vector<int>& nums, int K) {
        vector<int> ans(nums.size(),-1);
        long long sum = 0, i = 0 , j = 0;
        int k = 2*K+1;
        while(j < nums.size()){
            sum += nums[j];
            if(j-i+1 < k) j++;
            else{
                ans[j-K] = sum/k;
                sum -= nums[i];
                i++;
                j++;
            }
        }
        return ans;
    }
};
