class Solution {
public:
    int numberOfAlternatingGroups(vector<int>& colors, int k) {
        int ans = 0, n = colors.size();
        int i = 0, j = 0;
        while(i < n){
            if(j > 0 && colors[j%n] == colors[(j-1)%n]) i = j;
            if(j-i+1 < k) j++;
            else{
                ans++;
                i++;
                j++;
            }
        }
        return ans;
    }
};
