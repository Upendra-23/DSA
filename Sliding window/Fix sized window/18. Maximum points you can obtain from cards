class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int n = cardPoints.size();
        int sum = 0, ans = 0;
        int i = 0, j = k-1;
        
        for(int pointer=i;pointer<k;pointer++){
            sum += cardPoints[pointer];
        }

        ans = max(ans, sum);

        while(j >= 0){
            sum -= cardPoints[j];
            j--;
            i--;
            sum += cardPoints[(i+n)%n];
            ans = max(ans, sum);
        }
        return ans;
    }
};
