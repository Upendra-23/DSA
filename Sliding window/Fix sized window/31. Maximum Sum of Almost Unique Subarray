class Solution {
public:
    long long maxSum(vector<int>& nums, int m, int k) {
        long long ans = 0, sum = 0;
        unordered_map<int,int> mp;
        int i = 0, j = 0;
        while(j < nums.size()){
            sum += nums[j];
            mp[nums[j]]++;
            if(j-i+1 < k) j++;
            else{
                if(mp.size() >= m) ans = max(ans, sum);
                sum -= nums[i];
                mp[nums[i]]--;
                if(mp[nums[i]] == 0)
                    mp.erase(nums[i]);
                i++;
                j++;
            }
        }
        return ans;
    }
};
