class Solution {
  public:
    int minSwaps(vector<int>& arr) {
        int n = arr.size();
        int totalOnes = 0;
        for(int i=0;i<n;i++){
            if(arr[i] == 1)
                totalOnes++;
        }
        
        if(totalOnes == 0) return -1;
        
        int k = totalOnes;
        int ans = 1e9, cntOnes = 0;
        int i = 0, j = 0;
        while(j < n){
            if(arr[j] == 1) cntOnes++;
            if(j-i+1 < k) j++;
            else{
                ans = min(ans, totalOnes-cntOnes);
                if(arr[i] == 1) cntOnes--;
                i++;
                j++;
            }
        }
        return ans;
    }
};
