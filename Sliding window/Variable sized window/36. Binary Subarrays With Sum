class Solution {
public:
    int numSubarraysWithSum(vector<int>& nums, int goal) {
        int sum = 0, countZeros = 0, res = 0;
        int i = 0, j = 0;
        while(j < nums.size()){
            sum += nums[j];
            while(i < j && (nums[i] == 0 || sum > goal)){
                if(nums[i] == 0) countZeros++;
                else countZeros = 0;
                sum -= nums[i];
                i++;
            }
            if(sum == goal){
                res += countZeros+1;
            }
            j++;
        }
        return res;
    }
};
