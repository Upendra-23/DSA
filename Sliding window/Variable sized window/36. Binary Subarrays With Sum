class Solution {
    int atMostK(vector<int> &nums, int k){
        if(k < 0) return 0;
        int ans = 0, cntOnes = 0;
        int i = 0, j = 0;
        while(j < nums.size()){
            if(nums[j] == 1) cntOnes++;
            while(cntOnes > k){
                if(nums[i] == 1) cntOnes--;
                i++;
            }
            ans += (j-i+1);
            j++;
        }
        return ans;
    }
public:
    int numSubarraysWithSum(vector<int>& nums, int goal) {
        return atMostK(nums, goal) - atMostK(nums, goal-1); 
    }
};
