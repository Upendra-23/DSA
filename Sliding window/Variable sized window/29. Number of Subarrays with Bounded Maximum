class Solution {
public:
    int numSubarrayBoundedMax(vector<int>& nums, int left, int right) {
        int ans = 0;
        int prev = 0, i = 0, j = 0;
        while(j < nums.size()){
            if(nums[j] >= left && nums[j] <= right){
                ans += j-i+1;
                prev = j-i+1;
            }
            else if(nums[j] < left){
                ans += prev;
            }
            else{
                prev = 0;
                i = j+1;
            }
            j++;
        }
        return ans;
    }
};
