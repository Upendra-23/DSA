class Solution {
public:
    int minLength(vector<int>& nums, int k) {
        unordered_map<int,int> mp;
        int i = 0, j = 0, ans = 1e9;
        long long sum = 0;
        while(j < nums.size()) {
            if(mp[nums[j]] == 0) sum += nums[j];
            mp[nums[j]]++;
            while(sum >= k && i <= j) {
                ans = min(ans, j-i+1);
                mp[nums[i]]--;
                if(mp[nums[i]] == 0) {
                    mp.erase(nums[i]);
                    sum -= nums[i];
                }
                i++;
            }
            j++;
        }
        if(ans == 1e9) return -1;
        return ans;
    }
};
