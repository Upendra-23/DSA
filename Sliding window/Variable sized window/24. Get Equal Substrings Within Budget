class Solution {
public:
    int equalSubstring(string s, string t, int maxCost) {
        int cost = 0, maxLen = 0;
        int i = 0, j = 0;
        while(j < s.size()){
            cost += abs(s[j]-t[j]);
            while(cost > maxCost){
                cost -= abs(s[i]-t[i]);
                i++;
            }
            maxLen = max(maxLen, j-i+1);
            j++;
        }
        return maxLen;
    }
};
