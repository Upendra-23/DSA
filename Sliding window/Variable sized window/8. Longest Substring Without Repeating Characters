class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        vector<int> mp(128,0);
        int cnt = 0, ans = 0;
        int i = 0, j = 0;
        while(j < s.size()){
            if(mp[s[j]] == 0) cnt++;
            mp[s[j]]++;
            while(cnt < j-i+1){
                mp[s[i]]--;
                if(mp[s[i]] == 0) cnt--;
                i++;
            }
            ans = max(ans,j-i+1);
            j++;
        }
        return ans;
    }
};
