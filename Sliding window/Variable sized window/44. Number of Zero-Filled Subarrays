class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        long long ans = 0;
        unordered_map<int,int> mp;
        int i = 0, j = 0;
        while(j < nums.size()) {
            mp[nums[j]]++;
            while(mp.size() > 1) {
                mp[nums[i]]--;
                if(mp[nums[i]] == 0)
                    mp.erase(nums[i]);
                i++;
            }
            if(mp[0] >= 1) ans += (j-i+1);
            j++;
        }
        return ans;
    }
};
