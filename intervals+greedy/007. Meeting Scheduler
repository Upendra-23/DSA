//  https://www.geeksforgeeks.org/problems/earliest-common-slot/1

class Solution {
  public:
    vector<int> commonSlot(vector<vector<int>> &a, vector<vector<int>> &b, int d) {
        // Code Here
        sort(a.begin(), a.end());
        sort(b.begin(), b.end());
        
        int i = 0, j = 0;
        while(i < a.size() && j < b.size()){
            int left = max(a[i][0], b[j][0]);
            int right = min(a[i][1], b[j][1]);
            if(right - left >= d){
                return {left, left+d};
            }
            
            if(a[i][1] < b[j][1]) i++;
            else j++;
        }
        return {};
    }
};
