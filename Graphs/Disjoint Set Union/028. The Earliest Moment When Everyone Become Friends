#include <bits/stdc++.h> 
class DisjointSet {
    public:
    vector<int> parent, size;
	int componentsCnt = 0;
    DisjointSet(int n){
        parent.resize(n+1,0);
        size.resize(n+1,1);
		componentsCnt = n;
        for(int i=0;i<=n;i++){
            parent[i] = i;
        }
    }
    
    int findUpar(int node){
        if(parent[node] == node) return node;
        return parent[node] = findUpar(parent[node]);
    }
    
    void unionBySize(int u,int v){
        int ulp_u = findUpar(u);
        int ulp_v = findUpar(v);
        if(ulp_u == ulp_v) return;
        if(size[ulp_u] >= size[ulp_v]){
            parent[ulp_v] = ulp_u;
            size[ulp_u] += size[ulp_v];
        }
        else{
            parent[ulp_u] = ulp_v;
            size[ulp_v] += size[ulp_u];
        }
		componentsCnt--;
    }
};
bool static comp(vector<int> &l1, vector<int> &l2) {
	return l1[0] < l2[0];
}
int minTime(vector<vector<int>> &logs, int n)
{
	sort(logs.begin(), logs.end(), comp);

	DisjointSet ds(n);

	for(auto it:logs) {
		int t = it[0], u = it[1], v = it[2];
		ds.unionBySize(u, v);
		if(ds.componentsCnt == 1)
			return t;
	}
	return -1;

}
