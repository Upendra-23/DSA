class Solution {
public:
    int maxOperations(vector<int>& nums, int k) {
        sort(nums.begin(),nums.end());
        int cnt = 0;
        int low = 0, high = nums.size()-1;
        while(low < high){
            int sum = nums[low]+nums[high];
            if(sum == k){
                cnt++;
                low++;
                high--;
                continue;
            }
            if(sum < k) low++;
            else high--;
        }
        return cnt;
    }
};
